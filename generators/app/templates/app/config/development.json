{
  "express": {
    "allowAllOrigins": true,
    "serveStatic": true
  },
  "storage": {
    "type": "local",
    "config": {
      "basePath": "public"
    }
  },
  <% if (locals.useMongo) {%>
  "mongoose": {
    "uri": "mongodb://localhost/<%=dbName%>"
  },<%}%>
  <% if (locals.useSequelize) {%>
  "sequelize" : {
    <% if (locals.usePostgres) {%>"uri": "postgres://postgres@localhost:5432/<%=dbName%>"<%}%>
    <% if (locals.useMysql) {%>"uri": "mysql://root:root_password@localhost:3306/<%=dbName%>"<%}%>
  },<%}%>
  <% if (locals.includeRedis) {%>
  "redis" : {
    "host": "localhost",
    "port": 6379
  },<%}%>
  "security": {
    "jwtSecret": "<%=jwtSecret%>",
    "jwtTokenExpirationTime": 43200,
    "jwtTokenReissueTime": 3600
  }
}