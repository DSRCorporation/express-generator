{
  "express": {
    "port": 3000,
    "limit": "10mb",
    "serveStatic": false,
    "staticUrl": "/public",
    "staticPath": "/public"
  },
  "email": {
    "addresses": {
      "from": "noreply@example.com"
    },
    "defaults": {}
  },
  <% if (locals.useMongo) {%>
  "mongoose": {
    "options": {}
  },<%}%>
  <% if (locals.useSequelize) {%>
  "sequelize" : {
    "options": {}
  },
  <%}%>
  <% if (locals.includeRedis) {%>
  "redis": {
    "options": {
      "reconnect": {
        "maxAttempts": 50,
        "timeout": 1000
      }
    }
  },<%}%>
  "logger": {
    "app": {
      "console": {
        "level": "debug",
        "colorize": true,
        "label": "app",
        "timestamp": true
      }
    },
    "db": {
      "console": {
        "level": "debug",
        "colorize": true,
        "label": "db",
        "timestamp": true
      }
    },
    "express": {
      "console": {
        "level": "debug",
        "colorize": true,
        "label": "express",
        "timestamp": true
      }
    },
    "utils": {
      "console": {
        "level": "debug",
        "colorize": true,
        "label": "utils",
        "timestamp": true
      }
    },
    "tests": {
      "console": {
        "level": "debug",
        "colorize": true,
        "label": "tests",
        "timestamp": true
      }
    }
  }
}